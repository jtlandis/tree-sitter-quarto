{
  "name": "@jtlandis/tree-sitter-quarto",
  "version": "0.0.3",
  "description": "quarto grammar for tree-sitter",
  "repository": "github:jtlandis/tree-sitter-quarto",
  "author": "jtlandis (https://github.com/jtlandis)",
  "license": "MIT",
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "markdown"
  ],
  "files": [
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "tree-sitter-*/grammar.js",
    "tree-sitter-*/queries/*",
    "tree-sitter-*/src/**",
    "common/grammar.js",
    "common/html_entities.json"
  ],
  "dependencies": {
    "node-addon-api": "^8.0.0",
    "node-gyp-build": "^4.8.0"
  },
  "devDependencies": {
    "prebuildify": "^6.0.0",
    "tree-sitter-cli": "^0.22.2"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "scripts": {
    "test": "node scripts/test.js",
    "build": "node scripts/build.js",
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip"
  },
  "publishConfig": {
    "access": "public"
  },
  "tree-sitter": [
    {
      "scope": "source.qmd",
      "path": "tree-sitter-markdown",
      "injection-regex": "^(quarto|qmd)$",
      "file-types": [
        "qmd"
      ],
      "highlights": "tree-sitter-markdown/queries/highlights.scm",
      "injections": "tree-sitter-markdown/queries/injections.scm",
      "external-files": [
        "common/grammar.js"
      ]
    },
    {
      "scope": "text.markdown_inline",
      "path": "tree-sitter-markdown-inline",
      "highlights": "tree-sitter-markdown_inline/queries/highlights.scm",
      "injections": "tree-sitter-markdown_inline/queries/injections.scm",
      "external-files": [
        "common/grammar.js"
      ]
    }
  ]
}
